# Lookuply Infrastructure Environment Variables
# Copy this file to .env and fill in the values

# PostgreSQL
POSTGRES_USER=lookuply
POSTGRES_PASSWORD=your_secure_password_here

# Meilisearch
MEILI_MASTER_KEY=your_meilisearch_master_key_here
MEILI_ENV=production

# Ollama (LLM)
OLLAMA_HOST=http://host.docker.internal:11434
MODEL_NAME=llama3.1:8b

# AI Evaluator - Anti-Gaming (Server-side secrets)
# These criteria are NOT in the codebase, making gaming harder
EVAL_CRITERIA=usefulness,relevance,quality,trustworthiness
EVAL_THRESHOLD=0.7

# Frontend
FRONTEND_API_URL=https://api.lookuply.info

# Security (Optional)
# POSTGRES_SSL_MODE=require
# REDIS_PASSWORD=your_redis_password
